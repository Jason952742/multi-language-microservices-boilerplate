{
  "$schema": "https://www.krakend.io/schema/v3.json",
  "version": 3,
  "name": "MultiLangApiGateway",
  "timeout": "300000ms",
  "cache_ttl": "4000s",
  "port": 8080,
  "output_encoding": "json",
  "client_tls": {
    "@comment": "Skip SSL verification when connecting to backends",
    "allow_insecure_connections": true
  },
  "extra_config": {
    "router": {
      "return_error_msg": true
    }
  },
  "endpoints": [
    {
      "endpoint": "/api/v1/web-auth/login",
      "method": "POST",
      "extra_config": {
        "security/cors": {
          "allow_origins": ["*"],
          "allow_methods": ["GET", "HEAD", "POST"],
          "expose_headers": ["Content-Length", "Content-Type"],
          "allow_headers": ["Origin", "Authorization", "Content-Type"],
          "max_age": "12h",
          "allow_credentials": false,
          "debug": false
        }
      },
      "backend": [
        {
          "url_pattern": "/realms/multi_lang/protocol/openid-connect/token",
          "method": "POST",
          "host": ["https://${your_host_ip}:8443"]
        }
      ],
      "input_headers": ["*"],
      "input_query_strings": ["*"]
    },
    {
      "endpoint": "/api/v1/web-auth/user_info",
      "method": "GET",
      "extra_config": {
        "auth/validator": {
          "alg": "RS256",
          "jwk_url": "https://${your_host_ip}:8443/realms/multi_lang/protocol/openid-connect/certs",
          "cache": false,
          "disable_jwk_security": true,
          "operation_debug": true
        }
      },
      "concurrent_calls": 1,
      "input_headers": ["*"],
      "backend": [
        {
          "url_pattern": "/realms/multi_lang/protocol/openid-connect/userinfo",
          "method": "GET",
          "host": ["https://${your_host_ip}:8443"]
        }
      ]
    }
  ]
}