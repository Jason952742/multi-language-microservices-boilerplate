
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
max_line_length = 300

[*.kt]
indent_size = 4

[*.kts]
indent_size = 4

[Makefile]
indent_style = tab

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.proto]
indent_size = 2
max_line_length = 80
